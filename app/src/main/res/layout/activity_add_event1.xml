<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30sp"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:padding="2sp"
                    app:srcCompat="@drawable/share_button" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/event_background"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:background="?attr/colorPrimary"
                android:gravity="center"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/Event_Title1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="100sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="40sp"
                    android:layout_weight="1"
                    android:gravity="start|bottom"
                    android:hint="Title"
                    android:inputType="textAutoCorrect|textCapSentences"
                    android:lines="2"
                    android:maxLength="30"
                    android:maxLines="3"
                    android:textColor="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/event_image"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="100sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="40sp"
                    app:srcCompat="@drawable/image1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/event_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="start"
                    android:hint="Time"
                    android:textColor="@color/Black"
                    android:textSize="20sp"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="36dp"
                android:layout_marginBottom="30sp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/userToDoReminderIconImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/alarm_add" />

                <TextView
                    android:id="@+id/userToDoRemindMeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="start"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:text="Remind Me"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/toDoHasDateSwitchCompat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp" />

            </LinearLayout><![CDATA[








            android:id="@+id/toDoCustomTextInput01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:paddingTop="20dp">









            ]]>

            <EditText
                android:id="@+id/Event_Description1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_weight="0"
                android:gravity="start|bottom"
                android:hint="description"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="2"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:textColor="@color/black" />


        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250sp"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/check_box" />

</androidx.constraintlayout.widget.ConstraintLayout>