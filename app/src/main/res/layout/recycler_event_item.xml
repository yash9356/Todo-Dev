<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8E7E7"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/Event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13sp"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="80sp"
                android:paddingRight="30sp"
                android:text="Android"
                android:textColor="@color/Black"
                android:textSize="22sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/Event_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="20sp"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="2"
                android:paddingLeft="80sp"
                android:paddingRight="20sp"
                android:text="Description of event "
                android:textColor="#818181"
                android:textSize="15dp"
                android:textStyle="normal" />

        </LinearLayout>

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="23sp"
            android:layout_height="23sp"
            android:layout_gravity="bottom|right"
            android:layout_margin="5sp"
            android:clickable="true"
            android:padding="1dp"
            app:srcCompat="@drawable/delete_min" />

        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="right"
            android:layout_margin="8sp"
            app:tint="@color/colorPrimary"
            app:srcCompat="@drawable/sharing_min" />

    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:elevation="20dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C3C2C2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Event_img"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/courses_img16" />

            <TextView
                android:id="@+id/Event_Time7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:padding="2dp"
                android:text="12:30Am"
                android:textColor="@color/Black"
                android:textSize="16dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>